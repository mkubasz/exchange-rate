{
  "name": "backend-assignment",
  "version": "1.0.0",
  "description": "Backend recruitment assignment",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start:watch": "nodemon --exec ts-node -e ts,js,json src/server.ts",
    "start": "ts-node src/server.ts",
    "start:prod": "node dist/server.js",
    "dist": "rm -Rf dist && tsc --project tsconfig.dist.json",
    "lint": "tsc --noEmit && eslint {src,test}/**/*.ts",
    "test": "jest"
  },
  "dependencies": {
    "body-parser": "1.19.2",
    "cors": "2.8.5",
    "env-var": "7.1.1",
    "express": "4.17.3",
    "morgan": "1.10.0",
    "pino-http": "8.5.0"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.2",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.1",
    "@types/morgan": "1.9.3",
    "@types/node": "16.11.7",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "5.12.1",
    "@typescript-eslint/parser": "5.12.1",
    "eslint": "8.9.0",
    "jest": "27.5.1",
    "nodemon": "2.0.22",
    "supertest": "6.2.2",
    "ts-jest": "27.1.3",
    "ts-node": "10.5.0",
    "typescript": "4.5.5"
  }
}
